# ==============================================
# REQUIRED - Site Configuration
# ==============================================
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=Eazy Sevai

# ==============================================
# REQUIRED - n8n Webhooks
# ==============================================
NEXT_PUBLIC_N8N_FORM_WEBHOOK=https://your-n8n-instance.app.n8n.cloud/webhook/form-submission
NEXT_PUBLIC_N8N_PAYMENT_WEBHOOK=https://your-n8n-instance.app.n8n.cloud/webhook/payment-confirmation
NEXT_PUBLIC_N8N_INQUIRY_WEBHOOK=https://your-n8n-instance.app.n8n.cloud/webhook/inquiry

# ==============================================
# REQUIRED - Razorpay Payment Gateway
# ==============================================
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# ==============================================
# REQUIRED - Cloudinary File Upload
# ==============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=xxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxxxxxxxxxxxxx

# ==============================================
# OPTIONAL - Analytics
# ==============================================
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX
NEXT_PUBLIC_META_PIXEL_ID=123456789012345

# ==============================================
# Development Settings
# ==============================================
NODE_ENV=development